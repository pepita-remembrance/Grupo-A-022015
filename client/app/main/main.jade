div(ng-include='"components/navbar/navbar.html"')

.container
  form(ng-submit="createImport()")
    .row
      .col-lg-12
        .input-group
          label.sr-only(for='newImport') Nueva importación
          input#newImport.form-control(placeholder="Escribí el código de la nueva importación", ng-model="newImportCode")
          .input-group-btn
            button.btn.btn-primary(type='submit') Crear importación

  .row
    .col-lg-12
      h1.page-header Importaciones:
      ul.nav.nav-tabs.nav-stacked.col-md-4.col-lg-4.col-sm-6(ng-repeat='it in imports')
        li
          p {{it.code}}
          i {{it.createdAt}}

footer.footer
  .container
    p
